@import "/app.wxss";
.classify{
  display: flex;
  height:calc(100vh - 90rpx)
}
.classify-left {
  flex: 1;
  background-color:#f4f4f4;
}
.classify-right{
  flex: 3;
}
.classify-left-name{
  display: flex;
  justify-content: center;
  border-bottom: 1px #ccc solid;
  padding:15rpx 0;
}
.classify-left-name text{
  display: block;
  width: 100%;
  padding:10rpx;
  text-align: center;
}
.active{
  border-left: 3px var(--theTheme) solid;
  color: var(--theTheme)
}
.activeBgc{
  background-color: #ffffff;
}
.classify-item{
  display: flex;
  flex-wrap: wrap;
}
.class-children{
  width: 33.33%;
  text-align: center;
  margin-bottom: 20rpx;
}
.class-children image{
  width: 50%;
}
.class-children text{
  display: block;
  font-size: 26rpx;
}
.title-XieGang{
  color:#ccc;
}
.title{
  margin:0 30rpx;
  font-weight: 520;
}
.cat-name{
  display: flex;
  justify-content: center;
  padding-top:35rpx;
}